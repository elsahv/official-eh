---
export interface Props {
  attentionParagraph: string;
  interestParagraph: string;
  desireParagraph: string;
  actionParagraph: string;
  websiteUrl?: string;
  img: string;
  img2: string;
  btn1: string;
  btn2: string;
  btn1Link: string;
  btn2Link: string;
}

const {
  attentionParagraph,
  interestParagraph,
  desireParagraph,
  actionParagraph,
  websiteUrl,
  img,
  img2,
  btn1,
  btn2,
  btn1Link,
  btn2Link,
} = Astro.props as Props;
---

<div id="wrapper" class="2xl:my-3 flex justify-center bg-">
  <div
    id="flex"
    class="bg- lg:w-[1300px] bg- flex 2xl:flex-row flex-cols gap-5 2xl:p-5 lg:mt-[50px]"
  >
    <div id="sq1" class="">
      <div id="imgs-container" class="bg-">
        <a href={websiteUrl}>
          <img id="img1" src={img} alt="" class="" />
          <img
            id="img2"
            src={img2}
            alt=""
            class="bg-aliceBlue border-2 border-black"
          />
        </a>
      </div>
    </div>
    <div id="sq2" class="pt-5 mt- 2xl:px-5 px-3">
      <div
        id="content"
        class="bg- flex flex-col lg:text-xl text-lg md:p-1 mt-5 mb-5"
      >
        <!-- -1) attention -->
        <!-- -2) interest -->
        <!-- -3) desire -->
        <!-- -4) action -->
        <h1
          id="attentionParagraph"
          class="text-aquamarine font-semibold md:text-4xl text-2xl font- py-1 sq- text-"
        >
          {attentionParagraph}
        </h1>

        <div
          id="padding-left"
          class="text- aliceBlue font-thin pt-1 pl-1 space-y-5"
        >
          <p id="" class="bg-">
            <span class="text-carribean font-bold">- </span>
            {interestParagraph}
          </p>
          <p class="bg-">
            <span class="text-carribean font-bold">- </span>{desireParagraph}
          </p>
          <p class="bg-">
            <span class="text-carribean font-bold">- </span>{actionParagraph}
          </p>
        </div>
      </div>
      <div id="btns-wrapper" class="pl-2">
        <div id="btns-container-flex" class="flex space-x-4">
          <button
            id="dynamic-btn"
            class="opacity-85 hover:opacity-100 sq-styles bg-aquamarine text-onyx"
          >
            <a href={btn1Link}>
              {btn1}
            </a>
          </button>
          <button
            id="contact-btn"
            class="bg-carribean text-white opacity-85 hover:opacity-100 sq-styles"
          >
            <a href={btn2Link}>
              {btn2}
            </a>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
