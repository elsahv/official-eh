---
import { Image } from "astro:assets";
import ProfilePic from "../../public/eh-img.jpg";
import NavItems from "./NavItems.astro";
---

<header
  class="bg-test2 pt-5 pl-5 pr-5 pb-0 md:fixed relative md:left-0 top-0 z-50 h-screen
  2xl:w-1/4
   lg:w-[380px]
   md:w-[335px]
   max-[690px]:w-[360px]
   max-[600px]:w-[470px]
   max-[599px]:w-full
    border-gray-400 border-r"
>
  <div id="logo" class="2xl:text-9xl zltext-8xl pb-1 opacity-90">
    <a href="/"> Elsa <br /> Hovey</a>
  </div>
  <div id="sm-icons-container" class="">
    <NavItems />
  </div>
  <div class="bg- mt-[130px] mb-5">
    <Image src={ProfilePic} alt="" class="rounded w-3/4 pb-5" />
  </div>
</header>
